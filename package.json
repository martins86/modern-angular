{
  "name": "modern-angular",
  "description": "Training with modern angular.",
  "author": "Thiago Martins de Freitas",
  "email": "martins86@gmail.com",
  "license": "MIT",
  "homepage": "https://martins86.github.io/modern-angular/",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production",
    "build:ci": "npm run build -- --base-href=/.",
    "watch": "ng build --watch --configuration development",
    "deploy:gh": "ng deploy",
    "test": "ng test --coverage=true",
    "test:watch": "ng test --watch",
    "test:dev": "npm run test:watch -- --verbose --clearCache",
    "test:ci": "npm run test -- --no-watch"
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "angular-cli-ghpages": "^2.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  }
}